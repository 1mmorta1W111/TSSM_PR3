<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Периметр фигур" Height="450" Width="800">
    <Grid>
        <RadioButton Name="rectangleRadioButton" Content="Прямоугольник" Margin="20,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Checked="FigureRadioButton_Checked"/>
        <RadioButton Name="circleRadioButton" Content="Круг" Margin="200,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Checked="FigureRadioButton_Checked"/>
        <RadioButton Name="triangleRadioButton" Content="Треугольник" Margin="380,50,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Checked="FigureRadioButton_Checked"/>

        <TextBlock Name="side1Label" Text="1-я сторона" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0" Visibility="Collapsed"/>
        <TextBox Name="side1TextBox" Width="150" Height="30" Margin="20,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed"/>

        <TextBlock Name="side2Label" Text="2-я сторона" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,100,0,0" Visibility="Collapsed"/>
        <TextBox Name="side2TextBox" Width="150" Height="30" Margin="200,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed"/>

        <TextBlock Name="side3Label" Text="3-я сторона" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,100,0,0" Visibility="Collapsed"/>
        <TextBox Name="side3TextBox" Width="150" Height="30" Margin="380,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed"/>

        <TextBlock Name="radiusLabel" Text="Радиус" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,100,0,0" Visibility="Collapsed"/>
        <TextBox Name="radiusTextBox" Width="150" Height="30" Margin="200,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed"/>

        <Button Name="calculateButton" Content="Вычислить" Width="100" Height="30" Margin="200,200,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CalculateButton_Click"/>

        <Label Name="resultLabel" Content="Периметр = " Width="200" Height="30" Margin="200,250,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
